# Use Node.js LTS image
FROM node:22-alpine
# Create app directory
WORKDIR /usr/src/app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm install

# Copy app source code
COPY . .

RUN npx prisma generate

# Expose port (adjust if needed)
EXPOSE 8000

# Start the application
CMD ["npm", "start"]